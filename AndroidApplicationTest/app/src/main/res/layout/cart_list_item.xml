<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/main_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/bottom_layout"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                >


                <ImageView
                    android:id="@+id/product_image"
                    android:layout_width="120dp"
                    android:layout_height="90dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/placeholder_lesson"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:scaleType="fitXY" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:layout_gravity="center"
            android:background="@android:color/white"
            android:orientation="vertical">


            <TextView
                android:id="@+id/product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:text="ProductName"
                android:textColor="#766e6e"


                android:textSize="15dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/vendorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:layout_marginTop="5dp"
                android:text="ProductName"
                android:textColor="#766e6e"

                android:textSize="13dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/vendorAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:text="ProductName"
                android:textColor="#766e6e"


                android:textSize="13dp"
                android:textStyle="normal" />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginRight="10dp"

            android:background="@android:color/white"
            android:paddingTop="16dp">


            <TextView

                android:id="@+id/price_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentRight="true"
                android:ellipsize="end"
                android:lineSpacingExtra="2dp"
                android:maxLines="3"
                android:paddingRight="5dp"
                android:text="price 8789899"
                android:textColor="#555555"
                android:textSize="12dp" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button
            android:id="@+id/addCart"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"

            android:layout_marginTop="10dp"
            android:layout_weight=".5"
            android:background="#3affb0"

            android:text="Call vendor"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textStyle="normal"></Button>

        <Button
            android:id="@+id/removecart"
            android:layout_width="wrap_content"
            android:layout_height="40dp"

            android:layout_alignParentRight="true"
            android:layout_gravity="center"

            android:layout_margin="10dp"
            android:layout_weight=".5"
            android:background="#FF0000"
            android:padding="5dp"
            android:text="Remove from cart"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textStyle="normal"></Button>

    </RelativeLayout>
</LinearLayout>


